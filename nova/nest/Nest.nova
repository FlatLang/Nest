package "nova/nest"

class Nest {
    construct(private Object data) {}
    
    public toBe(Object other) => true {
        if (other != data) {
            // throw exception
            
            return false
        }
    }
    
    // or
    
    public toNotBe(Object other) => true {
        if (other == data) {
            // throw exception
            
            return false
        }
    }
    
    public static expect(Object obj) => new Nest(obj)
}
